@model YandexDzen.Models.PostViewModel
@{
    ViewBag.Title = "Удаления пользователя";
}
<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Html.DisplayFor(model => model.id_Post)
        </dd>
        <dt>Название Поста</dt>
        <dd>
            @Html.DisplayFor(model => model.Namepost)
        </dd>
        <dt>Автор</dt>
        <dd>
            @Html.DisplayFor(model => model.LoginUser)
        </dd>
        <dt>Содержание</dt>
        <dd>
            @Html.DisplayFor(model => model.Main)
        </dd>
    </dl>
    <div>
        <form asp-controller="Home" asp-action="DeletePost" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить"/>
            </div>
        </form>
    </div>
</div>